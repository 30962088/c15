<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="@drawable/bg_hd"
            android:paddingLeft="12.5dp"
            android:paddingRight="12.5dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="精彩音乐汇-暑期特辑精彩音乐汇精彩音乐汇-暑期特辑精彩音"
                android:textColor="#fff"
                android:lineSpacingExtra="5dp"
                android:textSize="21sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014/08/30"
                android:textSize="14.34sp"
                android:textColor="#80ffffff"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></WebView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/bg_border1"
            android:text="热门评论"
            android:textColor="#636363"
            android:textSize="12sp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border2"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border3"
                android:gravity="center_vertical">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_border4"
                    android:text="发送"
                    android:textSize="13.33sp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:textColor="#000000"/>

            </LinearLayout>
            <View
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:background="@drawable/btn_upload"
                android:layout_marginLeft="10dp"></View>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

    </LinearLayout>

</FrameLayout>