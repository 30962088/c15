<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="239dp">

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_t2">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015/02/12-2015/05/24"
                android:textColor="#99ffffff"
                android:textSize="12sp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/test_01"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="201dp"
                android:layout_height="130dp"
                android:background="@drawable/bg_t"
                android:layout_centerInParent="true"></View>
            
            <com.cctv.music.cctv15.ui.VoteTextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="61.5dp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="53454"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:text="参与"/>
            
            <View
                android:layout_width="220dp"
                android:layout_height="145dp"
                android:background="@drawable/bg_f"
                android:layout_centerInParent="true"></View>


            <TextView
                android:id="@+id/title"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@drawable/bg_blue"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="活动标题活动标题"
                android:textColor="#fff"
                android:textSize="17.33sp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>