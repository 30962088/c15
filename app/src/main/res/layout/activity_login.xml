<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="49dp"
            android:layout_height="match_parent">

            <View
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_back"
                android:layout_centerInParent="true"></View>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员登录"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="#000" />

        <LinearLayout
            android:id="@+id/register"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="#000000"
                android:textSize="13.33sp"></TextView>


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/bg_line3"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="25dp">

        <EditText
            android:id="@+id/phone"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/bg_field"
            android:hint="请输入手机号"
            android:textColorHint="#80000000"
            android:textColor="#000"
            android:textSize="15.3sp"/>

        <EditText
            android:id="@+id/password"
            android:layout_marginTop="12dp"
            android:password="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/bg_field"
            android:hint="请输入密码"
            android:textColorHint="#80000000"
            android:textColor="#000"
            android:textSize="15.3sp"/>


        <TextView
            android:id="@+id/btn_login"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#6ea5f0"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="15.3sp"
            android:gravity="center"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第三方账号登录"
            android:textColor="#80000000"
            android:textSize="15.3sp"
            android:gravity="center"/>


        <LinearLayout
            android:layout_marginTop="43dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/btn_weibo"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/icon_l_1"></View>

            <View
                android:id="@+id/btn_qq"
                android:layout_marginLeft="43dp"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/icon_l_2"></View>

            <View
                android:visibility="gone"
                android:id="@+id/btn_renren"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/icon_l_3"></View>
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>