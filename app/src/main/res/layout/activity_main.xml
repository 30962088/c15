<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_bg3">

    <ImageView
        android:id="@+id/guang1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/guang1_bottom"
        android:layout_alignBottom="@+id/clock"
        android:scaleType="fitXY"
        android:src="@drawable/guang2"></ImageView>


    <com.cctv.music.cctv15.ui.CircleLayout
        android:id="@+id/circleview"
        app:iconSize1="@dimen/circle_iconsize"
        android:layout_marginTop="@dimen/circle_top"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="@dimen/circle_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/d1"
        android:layout_width="match_parent"
        android:layout_height="82.5dp"
        android:background="@drawable/icon_hd2"></View>

    <View
        android:layout_width="123dp"
        android:layout_height="45.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_logo"></View>

    <View
        android:id="@+id/kedu"
        android:layout_width="@dimen/kedu_size"
        android:layout_height="@dimen/kedu_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/kedu_bottom"
        android:background="@drawable/icon_kedu"></View>







    <View
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/kedu"
        android:layout_alignBottom="@+id/kedu"
        android:layout_alignLeft="@+id/kedu"
        android:layout_alignRight="@+id/kedu"
        android:background="@drawable/icon_clock"></View>

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/clock"
        android:layout_alignRight="@+id/clock"
        android:layout_alignBottom="@+id/clock"
        android:layout_alignTop="@+id/clock"
        android:background="@drawable/icon_circle_line"></View>





    <View
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_alignLeft="@id/guang1"
        android:layout_alignRight="@id/guang1"
        android:layout_alignBottom="@id/guang1"></View>

    <com.cctv.music.cctv15.ui.RotateView
        android:id="@+id/rotateview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/clock"
        android:layout_alignLeft="@+id/clock"
        android:layout_alignRight="@+id/clock"
        android:layout_alignTop="@+id/clock" />


</RelativeLayout>
