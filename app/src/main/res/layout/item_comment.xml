<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="13dp"
        android:paddingTop="12dp"
        android:paddingRight="13dp">

        <LinearLayout
            android:paddingLeft="7dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/test_01"
                android:scaleType="centerCrop"
                app:riv_oval="true"></com.makeramen.roundedimageview.RoundedImageView>


            <LinearLayout
                android:layout_marginLeft="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ddrete"
                        android:textSize="14sp"
                        android:textColor="#5d5d5d"/>

                    <View
                        android:id="@+id/jubao"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/icon_jubao"></View>


                    <TextView
                        android:id="@+id/date"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1小时前"
                        android:textSize="10sp"
                        android:textColor="#999999"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的同事们都很喜欢呢。"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="7dp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/sep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg_line2"></View>

    </LinearLayout>
</FrameLayout>