<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="49dp"
            android:layout_height="match_parent">

            <View
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_back"
                android:layout_centerInParent="true"></View>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线直播"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <View
                android:layout_width="15.5dp"
                android:layout_height="14dp"
                android:background="@drawable/icon_program"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="节目单"
                android:textSize="14sp"
                android:textColor="#5561e4"
                android:layout_marginLeft="3dp"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/bg_line"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="228dp">

        <View
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_play2"></View>

    </RelativeLayout>
    
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:background="#fff"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"></com.handmark.pulltorefresh.library.PullToRefreshListView>

</LinearLayout>